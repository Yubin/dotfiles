[core]
editor = nvim
excludesfile = ~/.dotfiles/gitignore

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green
untracked = cyan

[web]
browser = google-chrome

[alias]
; credit goes to https://gist.github.com/datagrok/5080545
serve = !bash -c '"echo \"Usage: git clone git://`hostname`/ <local-dirname>\"; git daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/"'
today = log --author=Ming --since="6am" --branches

[user]
name = Ming Liu
email = vmliu1@gmail.com

[push]
default = current

[pull]
default = current

[grep]
extendRegexp = true
lineNumber = true

[diff]
tool = Kaleidoscope

[merge]
tool = Kaleidoscope

[difftool "Kaleidoscope"]
cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[mergetool]
prompt = false

[mergetool "Kaleidoscope"]
prompt = false
cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
trustExitCode = true

[rebase]
autostash = true

[credential]
helper = osxkeychain
